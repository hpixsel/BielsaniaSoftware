---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Kontakt">
  <div class="contact wrapper">
    <h1>Skontaktuj <span>Się</span> z nami!</h1>
    <div class="contact__content">
      <form
        action="https://formsubmit.co/7c422965968eb96e17c72048b566590c"
        method="POST"
      >
        <label for="title">Tytuł wiadomości:</label>
        <input type="text" name="Tytuł" required />
        <label for="email"><span>Twój</span> Email:</label>
        <input type="email" name="Email" required />
        <label for="name"><span>Twoje</span> Imię:</label>
        <input type="text" name="Imię" required />
        <label for="message">Wiadomość:</label>
        <textarea name="Wiadomość" id="message"></textarea>
        <input type="text" name="_honey" style="display:none" />
        <input type="hidden" name="_template" value="box" />
        <input
          type="hidden"
          name="_next"
          value="http://localhost:4321/wyslane"
        />
        <button class="btn contact__btn" type="submit">Wyślij wiadomość</button>
      </form>
      <img src="/svgs/contactPage.svg" alt="Kontakt SVG" />
    </div>
  </div>
  <div class="contact__bg"></div>
</Layout>

<style>
  .contact {
    margin-top: 2rem;
  }

  .contact h1 {
    font-size: 1.5rem;
    text-align: center;
  }

  .contact h1 span {
    color: var(--clr-accent);
  }

  .contact__bg {
    display: none;
    position: absolute;
    inset: 0;
    left: 45%;
    clip-path: polygon(15% 0, 100% 0, 100% 100%, 0 100%, 0 30%);
    background-color: var(--clr-primary-100);
    z-index: -1;
  }

  .contact__content form {
    margin-top: 2rem;
    font-family: inherit;
  }

  .contact__content form label {
    font-weight: 700;
    display: block;
    margin-bottom: 0.5rem;
  }

  .contact__content form > input + * {
    margin-top: 1rem;
  }

  .contact__content form label span {
    color: var(--clr-accent);
  }

  .contact__content form input,
  .contact__content form textarea {
    all: unset;
    width: calc(100% - 2rem);
    padding: 0.25rem 1rem;
    border-radius: 2rem;
    background-color: var(--clr-primary-300);
    color: var(--clr-text);
  }

  .contact__content form textarea {
    resize: vertical;
    min-height: 10rem;
    border-radius: 1rem;
  }

  .contact__btn {
    border: 0;
    font-size: 1rem;
    margin-top: 2rem;
    margin-inline: auto;
  }

  .contact__content img {
    display: block;
    width: 100%;
    margin-top: 2rem;
  }

  @media (min-width: 60rem) {
    .contact h1 {
      font-size: 4rem;
      margin-top: 4rem;
    }

    .contact__content {
      margin-top: 2rem;
      display: grid;
      grid-template-columns: 30% 31rem;
      justify-content: space-between;
    }

    .contact__content img {
      margin-top: 5rem;
    }

    .contact__btn {
      margin-left: 0;
    }

    .contact__bg {
      display: block;
    }
  }
</style>
